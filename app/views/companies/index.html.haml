#company_list
  %h1 公司信息列表
  %div
    - @companies.each do |company|
      %span
        公司名称:
        = company.name
        地址:
        = company.address
        = company.id
      %h4.list_action
        = link_to '查看信息', "/companies/#{company.id}",:class => "show"
        = link_to '修改信息', "/companies/#{company.id}/edit", :method => :get, :class => "update"
        = link_to '删除', company, :method => :delete, :class => "delete"
= link_to '添加信息', "/companies/new", :method => :get
