#company_list
  %h1 公司信息列表
  %div
    %table
      - @companies.each do |company|
        %td
          = company.name
        %td
          = company.address
        %td.list_action
          = link_to '查看信息', "/companies"
          = link_to '修改信息',  "/companies"
          = link_to '删除', "/companies", :confirm => 'Are you sure?', :method => :delete 
= link_to '添加信息', "/companies/new"