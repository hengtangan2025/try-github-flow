#company_list
  %h1 公司信息列表
  %div
    - @companies.each do |company|
      %span
        公司名称:
        = company.name
        地址:
        = company.address
        = company.id
      %h4.list_action
        %p
          = button_to '查看信息', "/companies/#{company.id}", :method => :get
        %tr
          = button_to '修改信息', "/companies/#{company.id}/edit", :method => :get
        %td
          = button_to '删除', company, :confirm => 'Are you sure?', :method => :delete
= button_to '添加信息', "/companies/new", :method => :get